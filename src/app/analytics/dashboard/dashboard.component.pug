.row
    .col-xs-12.col-sm-3
        kof-loading([isLoading]="isLoading")
    .col-xs-12.col-sm-9
        kof-date-range-selector.form-label-right([from]="fromTime", [to]="toTime", (onSelect)="loadData($event)", [buttonName]="'Показать'")
.row
    .col-xs-12
        kof-statistic-panel([data]="panelData")
.row
    .col-xs-12
        .x_title
            h4 Оборот
        .x_content
            kof-line-chart([chartData]="revenueChartData")
.row
    .col-xs-12
        .x_title
            h4 Конверсия оплат
        .x_content
            kof-line-chart([chartData]="conversionChartData")
.row
    .col-xs-12.col-sm-6
        .x_title
            h4 Способы оплаты
        .x_content
            kof-doughnut-chart([chartData]="paymentMethodChartData")
    .col-xs-12.col-sm-6
        .x_title
            h4 Геолокация
        .x_content
            kof-doughnut-chart([chartData]="geoChartData")