form.css-form(novalidate, name="createInvoiceTemplateForm", #createInvoiceTemplateForm="ngForm")
    .row
        .col-xs-12
            .form-group
                label.text-left Наименование предлагаемых товаров или услуг:
                    span.highlighted  *
                input.form-control([(ngModel)]="formParams.product", maxlength="100", required, name="product", #product="ngModel")
    .row
        .col-xs-12.col-sm-4
            .form-group
                label.text-left Тип ограничения стоимости:
                    span.highlighted
                kof-select([(ngModel)]="formParams.costType", [items]="costTypesItems", [placeholder]="'Без ограничений'", [modelOptions]="{standalone: true}", name="costTypesItems")
        div(*ngIf="formParams.costType === 'InvoiceTemplateCostFixed'")
            .col-xs-12.col-sm-8
                .form-group
                    label.text-left Стоимость предлагаемых товаров или услуг:
                        span.highlighted  *
                    input.form-control(type="number", [(ngModel)]="formParams.costAmount", kofMin=10, required, name="amount", #amount="ngModel")
        div(*ngIf="formParams.costType === 'InvoiceTemplateCostRange'")
            .col-xs-6.col-sm-4
                .form-group
                    label.text-left Нижняя граница стоимости:
                        span.highlighted  *
                    input.form-control(type="number", [(ngModel)]="formParams.costLowerBound", kofMin=10, kofMax="{{ formParams.costUpperBound }}", required, name="lowerBound", #lowerBound="ngModel")
            .col-xs-6.col-sm-4
                .form-group
                    label.text-left Верхняя граница стоимости:
                        span.highlighted  *
                    input.form-control(type="number", [(ngModel)]="formParams.costUpperBound", kofMin="{{ formParams.costLowerBound }}", required, name="upperBound", #upperBound="ngModel")
    .row
        .col-xs-12
            .form-group
                label.text-left Описание предлагаемых товаров или услуг:
                textarea.form-control([(ngModel)]="formParams.description", maxlength="1000", rows="3", name="description", #description="ngModel")
    .row
        .col-xs-12
            .form-group
                label.text-left Время жизни инвойса:
        .col-xs-4
            .form-group
                input.form-control(type="number", [(ngModel)]="formParams.lifetimeDays", kofMin=0, [placeholder]="'дни'", name="days", #days="ngModel")
        .col-xs-4
            .form-group
                input.form-control(type="number", [(ngModel)]="formParams.lifetimeMonths", kofMin=0, [placeholder]="'месяцы'", name="months", #months="ngModel")
        .col-xs-4
            .form-group
                input.form-control(type="number", [(ngModel)]="formParams.lifetimeYears", kofMin=0, [placeholder]="'года'", name="years", #years="ngModel")
    .row
        .col-xs-12
            .form-group
                button.btn.btn-primary.pull-right((click)="createInvoiceTemplate()", [disabled]="!createInvoiceTemplateForm.valid || isLoading") Создать шаблон
