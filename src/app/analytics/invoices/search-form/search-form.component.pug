form
    .row
        .col-md-4.col-sm-6.col-xs-12
            .form-group
                label Магазин:
                input.form-control
        .col-md-4.col-sm-6.col-xs-12
            .form-group
                label Временной отрезок создания инвойсов:
                .row
                    .col-sm-6.col-xs-12
                        .ui-calendar.search-form
                            p-calendar.ui-inputtext.search-form(
                            [(ngModel)]="searchParams.invoiceFrom",
                            name="invoiceFrom",
                            dateFormat = "dd.mm.yy",
                            [ngClass]="{'has-error': isInvalidDate}",
                            (onSelect)="selectInvoiceFrom()",
                            required)

                    .col-sm-6.col-xs-12
                        .ui-calendar.search-form
                            p-calendar.ui-inputtext.search-form(
                            [(ngModel)]="searchParams.invoiceTo",
                            name="invoiceTo",
                            dateFormat = "dd.mm.yy",
                            [ngClass]="{'has-error': isInvalidDate}",
                            (onSelect)="selectInvoiceTo()",
                            required)
        .col-md-4.col-sm-6.col-xs-12
            .form-group
                label Временной отрезок совершения платежей:
                .row
                    .col-sm-6.col-xs-12
                        .ui-calendar.search-form
                            p-calendar.ui-inputtext.search-form(
                            [(ngModel)]="searchParams.paymentFrom",
                            name="paymentFrom",
                            dateFormat = "dd.mm.yy",
                            [ngClass]="{'has-error': isInvalidDate}",
                            (onSelect)="selectPaymentFrom()",
                            required)
                    .col-sm-6.col-xs-12
                        .ui-calendar.search-form
                            p-calendar.ui-inputtext.search-form(
                            [(ngModel)]="searchParams.paymentTo",
                            name="paymentTo",
                            dateFormat = "dd.mm.yy",
                            [ngClass]="{'has-error': isInvalidDate}",
                            (onSelect)="selectPaymentTo()",
                            required)
    .row
        .col-md-4.col-sm-6.col-xs-12
            .row
                .col-sm-6.col-xs-12
                    .form-group
                        label IP адрес плательщика:
                        input.form-control(name="payerIP", [(ngModel)]="searchParams.payerIP")
                .col-sm-6.col-xs-12
                    .form-group
                        label Email плательщика:
                        input.form-control(name="payerEmail", [(ngModel)]="searchParams.payerEmail")
        .col-md-4.col-sm-6.col-xs-12
            .row
                .col-sm-6.col-xs-12
                    .form-group
                        label Идентификатор инвойса:
                        input.form-control(name="invoiceID", [(ngModel)]="searchParams.invoiceID")
                .col-sm-6.col-xs-12
                    .form-group
                        label Статус инвойса:
                        kof-select(
                        [(ngModel)]="searchParams.invoiceStatus",
                        [items]="invoiceStatuses",
                        [placeholder]="'Любой статус'",
                        [modelOptions]="{standalone: true}",
                        name="invoiceStatus")
        .col-md-4.col-sm-6.col-xs-12
            .row
                .col-sm-6.col-xs-12
                    .form-group
                        label Идентификатор платежа:
                        input.form-control(name="paymentID", [(ngModel)]="searchParams.paymentID")
                .col-sm-6.col-xs-12
                    .form-group
                        label Статус платежа:
                        kof-select(
                        [(ngModel)]="searchParams.paymentStatus",
                        [items]="paymentStatuses",
                        [placeholder]="'Любой статус'",
                        [modelOptions]="{standalone: true}",
                        name="paymentStatus")
    .row
        .col-xs-12
            .form-group
                button.btn.btn-primary.pull-right.btn-search-invoices((click)="search()") Показать
