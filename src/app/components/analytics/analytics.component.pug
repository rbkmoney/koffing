.row
    .col-xs-12
        .x_panel.tile
            .x_content
                form.form-horizontal.form-label-right
                    .form-group
                        .col-xs-1
                            label.control-label Магазин
                        .col-xs-5(*ngIf="selectItems.length")
                            kof-select([model]="selectedShopID", [items]="selectItems", (onChange)="onSelectShop($event)", [modelOptions]="{standalone: true}")
                ul.nav.nav-tabs.bar_tabs(*ngIf="selectedShopID")
                    li([routerLink]="['dashboard']", [routerLinkActive]="['active']")
                        a Статистика
                    li([routerLink]="['finance']", [routerLinkActive]="['active']")
                        a Финансы
                .tab-content
                    router-outlet
.row(*ngIf="!selectItems.length")
    .col-xs-12
        .jumbotron
            h1 Список магазинов пуст
            p Создайте новый магазин во вкладке "Мои магазины"