.row
    .col-xs-12.col-sm-6
        .form-group
            label.col-sm-5 Идентификатор:
            .col-sm-7
                div {{payment.id}}
    .col-xs-12.col-sm-6
        .form-group
            label.col-sm-5 Email плательщика:
            .col-sm-7
                div {{payment?.contactInfo?.email}}
.row
    .col-xs-12.col-sm-6
        .form-group
            label.col-sm-5 Статус:
            .col-sm-7
                span.label.label-default(*ngIf="!inProgressPolling", [ngClass]="getLabelClass(payment.status)") {{payment.status | kofPaymentStatus}}
                i.fa.fa-cog.fa-spin.fa-2x.fa-fw(*ngIf="inProgressPolling")
    .col-xs-12.col-sm-6
        .form-group
            label.col-sm-5 Fingerprint:
            .col-sm-7
                div {{payment.fingerprint}}
.row
    .col-xs-12.col-sm-6
        .form-group
            label.col-sm-5 Дата и время создания:
            .col-sm-7
                div {{payment.createdAt | date: "dd.MM.yyyy HH:mm:ss"}}
    .col-xs-12.col-sm-6
        .form-group
            label.col-sm-5 IP-адрес плательщика:
            .col-sm-7
                div {{payment.ip}}
.row
    .col-xs-12.col-sm-6
        .form-group
            label.col-sm-5 Сумма списания:
            .col-sm-7
                div {{payment.amount | kofRoubleCurrency}} {{payment.currency}}
    .col-xs-12.col-sm-6
        .form-group
            label.col-sm-5 Данные карты:
            .col-sm-7
                div **** **** **** {{payment.paymentToolDetails?.cardNumberMask}} ({{payment.paymentToolDetails?.paymentSystem}})
.row
    .col-xs-12.col-sm-6
        .form-group
            label.col-sm-5 Сумма к зачислению:
            .col-sm-7
                div {{payment.amount - payment.fee | kofRoubleCurrency}} {{payment.currency}}
.row(*ngIf="payment.error")
    .col-xs-12.col-sm-6
        .form-group
            label.col-sm-5 Сообщение об ошибке:
            .col-sm-7
                div {{payment.error?.message}}
div([hidden]="!inStatusProcessed || inProgressPolling")
    .ln_solid
    .row
        .col-xs-12
            kof-payment-capture.pull-right(
                [invoiceID]="invoiceID",
                [paymentID]="payment.id",
                (inProgressPolling)="changeProgressPolling($event)",
                (onChangeStatus)="changeStatus($event)")

            kof-payment-cancel.pull-right(
                [invoiceID]="invoiceID",
                [paymentID]="payment.id",
                (inProgressPolling)="changeProgressPolling($event)",
                (onChangeStatus)="changeStatus($event)")
