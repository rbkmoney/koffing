.row
    .col-xs-12
        .x_panel.tile
            .form_wizard.wizard_horizontal
                ul.wizard_steps.anchor
                    li
                        a.selected
                            span.step_no 1
                            span.step_descr Заявка
                    li
                        a.disabled
                            span.step_no 2
                            span.step_descr Заявка
                    li
                        a.disabled
                            span.step_no 3
                            span.step_descr Заявка
            ul.nav.nav-tabs.bar_tabs
                li.hand-cursor
                    a Существующий
                li.hand-cursor
                    a Новый
            .tab-content
                .x_title
                    h4 Добавление нового магазина
                .x_content
                    kof-loading([isLoading]="isLoading")
                        form.form-horizontal.form-label-left.css-form(novalidate, (ngSubmit)="createClaim(form)", name="form", #form="ngForm")
                            .form-group([ngClass]="{'has-error': hasError(shop_details_name)}")
                                .col-xs-12.col-sm-3
                                    label.control-label Название магазина *
                                .col-xs-12.col-sm-6
                                    input.form-control(type="text", required, name="shop_details_name",
                                                        [(ngModel)]="args.shopDetails.name", #shop_details_name="ngModel")
                            .form-group
                                .col-xs-12.col-sm-3
                                    label.control-label Описание магазина
                                .col-xs-12.col-sm-6
                                    input.form-control(type="text", name="shop_details_description", [(ngModel)]="args.shopDetails.description")
                            .form-group
                                .col-xs-12.col-sm-3
                                    label.control-label Месторасположение
                                .col-xs-12.col-sm-6
                                    input.form-control(type="text", name="shop_details_location", [(ngModel)]="args.shopDetails.location")

                            .form-group([ngClass]="{'has-error': hasError(contractor_registeredName)}")
                                .col-xs-12.col-sm-3
                                    label.control-label Наименование организации *
                                .col-xs-12.col-sm-6
                                    input.form-control(type="text", name="contractor_registeredName", required,
                                                        [(ngModel)]="args.contractor.registeredName", #contractor_registeredName="ngModel")
                            .form-group
                                .col-xs-12.col-sm-3
                                    label.control-label Категория *
                                .col-xs-12.col-sm-6
                                    kof-select([(ngModel)]="args.categoryRef", [items]="categories", [modelOptions]="{standalone: true}", name="category")
                            .ln_solid
                            .form-group
                                .col-xs-12.col-sm-6.col-sm-offset-3
                                    button.btn.btn-primary(type="submit", [disabled]="form.invalid") Создать заявку
                                    a.btn.btn-default.pull-right(type="reset", routerLink="/shops") Назад
