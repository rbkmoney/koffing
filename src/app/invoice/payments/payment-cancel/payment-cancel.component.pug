doctype html
button.btn.btn-default.btn-sm(data-toggle="modal", [attr.data-target]="'#' + paymentID + 'cancel'")
    | Отменить платеж

.modal.fade(tabindex="-1", role="dialog", id="{{paymentID}}cancel", data-backdrop="false")
    .modal-dialog.modal-sm
        .modal-content
            .modal-header
                button(class="close", data-dismiss="modal", aria-label="Close")
                    span(aria-hidden="true") &times;
                h5.modal-title Отменить платеж?
            .modal-body
                form(name="cancelForm", #cancelForm="ngForm")
                    label Причина:
                    input.form-control([(ngModel)]="reason", name="reason", required)
            .modal-footer
                .btn-toolbar.pull-right
                    .btn-group.btn-group-sm
                        button.btn.btn-default(data-dismiss="modal") Нет
                    .btn-group.btn-group-sm
                        button.btn.btn-danger(data-dismiss="modal", [disabled]="cancelForm.invalid", (click)="cancelPayment()") Да
