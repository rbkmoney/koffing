table.table.table-striped
    thead
        tr
            th Идентификатор
            th Название
            th Дата создания
            th Доступно средств
            th Собственных средств
            th Статус
    tbody(*ngFor="let item of walletTableItems")
        tr
            td {{item.id}}
            td {{item.name}}
            td {{item.createdAt | date: "dd.MM.yyyy HH:mm:ss"}}
            td {{item.account.available.amount}} {{item.account.available.currency | kofCurrency}}
            td {{item.account.own.amount}} {{item.account.own.currency | kofCurrency}}
            td
                span.label.label-default([ngClass]="getLabelClass(item.isBlocked)") {{getStatus(item.isBlocked)}}
