.panel.panel-default
    .panel-heading((click)="show()")
        a Изменение магазина
        i.fa.pull-right.custom-chevron([ngClass]="{'fa-chevron-down': showPanel, 'fa-chevron-right': !showPanel}")
    .panel-body(*ngIf="showPanel")
        kof-modification-detail([displayName]="'Название магазина'", [value]="shop.shopDetails.name")
        kof-modification-detail([displayName]="'Описание'", [value]="shop.shopDetails.description")
        kof-modification-detail([displayName]="'Месторасположение'", [value]="shop.shopDetails.location")
        kof-modification-detail([displayName]="'Банк'", [value]="shop.contractor.bankAccount.bankName")
        kof-modification-detail([displayName]="'Расчетный счет'", [value]="shop.contractor.bankAccount.account")
        kof-modification-detail([displayName]="'Корреспондентский счет'", [value]="shop.contractor.bankAccount.bankPostAccount")
        kof-modification-detail([displayName]="'БИК'", [value]="shop.contractor.bankAccount.bankBik")
        kof-modification-detail([displayName]="'Наименование юр. лица'", [value]="shop.contractor.entity.registeredName")
        kof-modification-detail([displayName]="'Номер юр. лица'", [value]="shop.contractor.entity.registeredNumber")
        kof-modification-detail([displayName]="'ИНН'", [value]="shop.contractor.entity.inn")
        kof-modification-detail([displayName]="'Фактический адрес'", [value]="shop.contractor.entity.actualAddress")
        kof-modification-detail([displayName]="'Почтовый адрес'", [value]="shop.contractor.entity.postAddress")
        kof-modification-detail([displayName]="'Позиция представителя'", [value]="shop.contractor.entity.representativePosition")
        kof-modification-detail([displayName]="'ФИО представителя'", [value]="shop.contractor.entity.representativeFullName")
        kof-modification-detail([displayName]="'Документ представителя'", [value]="shop.contractor.entity.representativeDocument")
