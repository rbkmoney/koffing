.x_panel.tile
    .x_content
        kof-loading([isLoading]="isLoading")
            kof-create-contract(
                *ngIf="showContent && contractor",
                (onChange)="onContractorChange($event)",
                [defaultContractor]="contractor"
            )
            kof-create-paytool(
                *ngIf="showContent && payoutTool",
                (onChange)="onPayoutToolChange($event)",
                [contractBankAccount]="contractor && contractor.bankAccount",
                [defaultPayoutTool]="payoutTool"
            )
            kof-add-shop(
                *ngIf="showContent && shop",
                (onChange)="onShopFieldsChange($event)",
                [defaultShop]="shop"
            )
            kof-edit-shop(
                *ngIf="showContent && editableShop && editableShop.shop",
                [shop]="editableShop.shop",
                [defaultShopChanges]="shopChanges",
                (onChange)="onShopEditingChange($event)"
            )
            .form-group
                .col-xs-12.col-sm-6.col-sm-offset-3
                    button.btn.btn-primary.pull-right(type="button", [disabled]="!canSubmit()", (click)="saveChanges()") Сохранить изменения
                    a.btn.btn-default(type="reset", (click)="returnToManagement()") Назад
