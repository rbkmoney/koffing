.row
    .col-xs-12
        .x_panel.tile
            .form_wizard.wizard_horizontal
                ul.wizard_steps.anchor
                    li
                        a([ngClass]="{'done': currentWizardStep > wizardContractStep, 'selected': currentWizardStep === wizardContractStep}")
                            span.step_no 1
                            span.step_descr Контракт
                    li
                        a([ngClass]="{'disabled': currentWizardStep < wizardAccountStep, 'done': currentWizardStep > wizardAccountStep, 'selected': currentWizardStep === wizardAccountStep}")
                            span.step_no 2
                            span.step_descr Счет
                    li
                        a([ngClass]="{'disabled': currentWizardStep < wizardShopDetailsStep, 'done': currentWizardStep > wizardShopDetailsStep, 'selected': currentWizardStep === wizardShopDetailsStep}")
                            span.step_no 3
                            span.step_descr Магазин
            kof-loading([isLoading]="wizardArgs.isLoading")
                kof-step1-contract(
                    *ngIf="currentWizardStep === wizardContractStep",
                    (steppedBackward)="returnToManagement()",
                    (steppedForward)="proceedToAccountStep()",
                    [wizardArgs]="wizardArgs"
                )
                kof-step2-account(
                    *ngIf="currentWizardStep === wizardAccountStep",
                    (steppedBackward)="returnToManagement()",
                    (steppedForward)="proceedToShopDetailsStep()",
                    [wizardArgs]="wizardArgs"
                )
                kof-step3-shop(
                    *ngIf="currentWizardStep === wizardShopDetailsStep",
                    (steppedBackward)="returnToManagement()",
                    (steppedForward)="finishWizard()",
                    [wizardArgs]="wizardArgs"
                )