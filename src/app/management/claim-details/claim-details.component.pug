.row
    .col-xs-12.col-md-8.col-md-offset-2
        .x_panel
            .x_title
                h5 Детали заявки
            .x_content
                form.form-horizontal.form-label-left.css-form
                    .form-group(*ngIf="claimLabel")
                        .col-xs-12.col-sm-4
                            label.text-left Тип заявки:
                        .col-xs-12.col-sm-8
                            div {{claimLabel}}
                    .form-group
                        .col-xs-12.col-sm-4
                            label.text-left Идентификатор:
                        .col-xs-12.col-sm-8
                            div {{claim?.id}}
                    .form-group
                        .col-xs-12.col-sm-4
                            label.text-left Номер ревизии:
                        .col-xs-12.col-sm-8
                            div {{claim?.revision}}
                    .form-group
                        .col-xs-12.col-sm-4
                            label.text-left Дата и время создания:
                        .col-xs-12.col-sm-8
                            div {{claim?.createdAt | date: "dd.MM.yyyy HH:mm:ss"}}
                    .form-group(*ngIf="claim?.updatedAt")
                        .col-xs-12.col-sm-4
                            label.text-left Дата и время изменения:
                        .col-xs-12.col-sm-8
                            div {{claim?.updatedAt | date: "dd.MM.yyyy HH:mm:ss"}}
                    .form-group
                        .col-xs-12.col-sm-4
                            label.text-left Статус:
                        .col-xs-12.col-sm-8
                            div {{claim?.status | kofClaimStatus}}
                .ln_solid
                .row
                    .col-xs-12
                        kof-revoke-claim([claim]="claim")

        .x_panel(*ngIf="contractCreations?.length")
            .x_title
                h5 Данные контракта
            .x_content
                kof-contract-creation-details([contractCreations]="contractCreations")

        .x_panel(*ngIf="contractPayoutToolCreations?.length")
            .x_title
                h5 Средство вывода
            .x_content
                kof-contract-payout-tool-creation-details([contractPayoutToolCreations]="contractPayoutToolCreations")

        .x_panel(*ngIf="shopCreations?.length")
            .x_title
                h5 Данные магазина
            .x_content
                kof-shop-creation-details([shopCreations]="shopCreations")

        kof-contract-binding-details(*ngIf="contractBindings?.length && !contractCreations?.length", [contractBindings]="contractBindings")
