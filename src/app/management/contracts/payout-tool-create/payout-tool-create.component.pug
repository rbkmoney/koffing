doctype html
kof-loading([isLoading]="isLoading")
    kof-create-paytool(
        #createPaytoolRef,
        (onChange)="payoutToolChange($event)"
    )
    .form-group
        .col-xs-12.col-sm-6.col-sm-offset-3
            button.btn.btn-primary.pull-right(
                type="submit",
                [disabled]="isLoading",
                (click)="createPayoutTool()"
            ) Добавить средство вывода
            a.btn.btn-default(type="reset", (click)="navigateBack()") Назад