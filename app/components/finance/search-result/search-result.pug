table.table.table-hover.table-striped
    thead
        tr
            th #
            th ID
            th Shop ID
            th Amount
            th Currency
            th Due Date
            th Status
            th Product
            th Description
    tbody
        tr(ng-repeat="result in $ctrl.searchedInvoices")
            td {{$index + 1}}
            td {{result.id}}
            td {{result.shopID}}
            td {{result.amount}}
            td {{result.currency}}
            td {{result.dueDate}}
            td {{result.status}}
            td {{result.product}}
            td {{result.description}}
.row
    .col-md-12
        paginate
